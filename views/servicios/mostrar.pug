extends ../layout/app
block styles
     link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")


block contenido
   
   div(class="py-5")
        a(href="/" class="rounded py-2 px-10 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-bold tex-center uppercase my-5 inline-block w-full md:w-auto") Regresar
        h1(id="titulo" class="text-4xl my-10 font-extrabold text-center")=servicio.titulo
        
        div
            a(href="#" class="font-bold text-gray-600 text-sm") Categoria: 
                span(class="font-normal")= servicio.categoria.nombre
        
        div(class="mt-5 md:flex md:gap-4 md:items-start")
            div(class="md:w-2/3 bg-white shadow rounded-lg")
                img(src=`/uploads/${servicio.imagen}` alt=`Imagen del servicio ${servicio.nombre}`)

                div(class="px-5 py-10 space-y-5")
                    p= servicio.descripcion

                    h2(class="text-2xl leading-6 font-bold text-gray-900") Información del Servicio

                    div(class="grid grid-cols-1 md:grid-cols-2")
                        p(class="text-gray-600 font-bold text-xs") Precio
                            span(class="text-gray-800 block text-lg") S/ #{servicio.precio.precio}


            aside(class="md:w-1/3 bg-white shadow rounded-lg")
                h3(class="text-center py-10 leading-6 text-2xl font-bold text-gray-900") Ubicacion

                div(class="h-96" id="mapa")
                    p(id="lat" class="hidden")= servicio.lat
                    p(id="lng" class="hidden")= servicio.lng

                div(class="p-5")
                    p(class="text-gray-600 font-bold text-xs") Dirección
                        span(id="calle" class="text-gray-800 block text-md")=servicio.departamento
                        span(id="calle" class="text-gray-800 block text-md")=servicio.distrito
                        span(id="calle" class="text-gray-800 block text-md")=servicio.calle
                    
                if !esServidor

                    h3(class="text-2xl text-center my-10 font-extrabold text-gray-900") Servicio
                    if enviado
                    
                        p(class="p-2 text-center bg-green-100 text-green-600 uppercase font-bold") Mensaje enviado correctamente

                    else if usuario

                        if errores 
                            div(class="max-w-md mx-auto my-10")
                                each error in errores 
                                    p.bg-red-600.text-white.uppercase-text-xs.text-center.p-2.mb-1.fond-bold= error.msg

                        form(method="POST")
                            input(type="hidden" name="_csrf" value=csrfToken)

                            div(class="space-y-5")
                                label(for="mensaje") Mensaje
                                textarea(id="mensaje" name="mensaje" class="w-full px-2  py-2 border border-gray-300 rounded-lg shadow" placeholder=" Coloca tu mensaje aquí")

                                input(type="submit" value="Enviar Mensaje" class="bg-indigo-600 text-white font-bold uppercase text-sm w-full p-2 cursor-pointer")
                    else
                        div(class="flex flex-col items-center justify-center gap-2")
                                p(class="text-center") Si deseas contactar el servicio
                                a(class="text-indigo-600  py-8" href="/auth/registro") Debes crear una cuenta

block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js") <!--  -->
    script(src="/js/mostrarMapa.js")