extends ../layout/index

block contenido

   div.py-10
      a(href="/")
        h1.text-4xl.my-10.font-extrabold.text-center My
            span.font-normal Paw
      h2.text-center.text-2xl.font-extrabold= pagina

      if errores 
        div(class="max-w-md mx-auto my-10")
            each error in errores 
                p.bg-red-600.text-white.uppercase-text-xs.text-center.p-2.mb-1.fond-bold= error.msg

      .mt-8.mx-auto.max-w-md
        .bg-white.py-8.px-4.shadow
            form.space-y-5(method="POST" action="/auth/login")
                input(type="hidden" name="_csrf" value=csrfToken)
                div
                    label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") Tu Email
                    input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email"  maxlength="100" )
                div
                    label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="password") Tu Password
                    input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Password" type="password" name="password" minlength="6" maxlength="15" )
                
                div.flex.items-center.justify-between
                    a.text-gray-500.text-xs(href="/auth/registro") ¿No tienes cuenta? Crea una
                    a.text-gray-500.text-xs(href="/auth/olvide-password") Olvide mi password


                input(class="w-full bg-indigo-600 hover:bg-indigo-800 text-white font-bold py-3 cursor-pointer" type="submit" value="Iniciar Sesión")