extends ../layout/admin

block styles
    meta(name="csrf-token" content=csrfToken)

block contenido
   div.py-5
      h1.text-4xl.my-10.font-extrabold.text-center My
        span.font-normal Paw   
      h1.text-2xl.my-5.text-left=`BIENVENIDO `
      h1.text-2xl.my-5.text-left=`Usuario(a) `
        span.text-2xl.my-10.font-bold=`${usuario} ` 
        br
        div(class="p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-8 md:space-y-0 gap-4")
          a(href=`/auth/editar/${usuarioId}` class="rounded py-2 px-10 bg-blue-600 hover:bg-blue-700 text-white text-sm font-bold tex-center uppercase my-5 inline-block w-full md:w-auto") Mi perfil
          br

                


      //- ############################ Regitro de Mascotas ################################################## //
      div(class="bg-white shadow rounded-lg p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-8 md:space-y-0 gap-4")
      
        h2.text-center.text-2xl.font-extrabold= pagina

     
        a(href="/mascotas/crear" class="rounded py-2 px-10 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-bold tex-center uppercase my-5 inline-block w-full md:w-auto") Registro Mascotas

      br

      if mascotas.length

          div(class="bg-white shadow rounded-lg")
                ul(class="divide-y divide-gray-200")
                  each mascota in mascotas
                    li
                        div(class="p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-8 md:space-y-0 gap-4")


                          div(class="sm:w-2/4 md:w-3/6 lg:w-4/6 space-y-3")
                            a(class="block text-2xl font-extrabold text-indigo-600 truncate" href=`/mascotas/editar/${mascota.id}`)= mascota.nombre

                                p(class="text-sm text-black font-bold")= mascota.raza

                                p(class="text-sm text-gray-400 font-bold flex items-center")=`Tipo de mascota `
                                span(class="text-sm text-black-400 font-bold flex items-center")=`${mascota.tipo_mascotum.nombre}`

                              
                                p(class="text-sm text-gray-400 font-bold flex items-center") edad 
                                span(class="text-sm text-black-400 font-bold flex items-center")=`${mascota.edad}`
                            
                               



                           
                           
                          div(class="sm:w-1/4 md:w-2/6 lg:w-1/6 flex flex-col 2xl:flex-row gap-2")
                             
                                //- button(type="submit" data-servicio-id=`${servicio.id}` class=`cambiar-estado w-full px-2 py-2 md:py-1 text-xs leading-5 font-bold rounded cursor-pointer ${servicio.publicado ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800'}`)=`${servicio.publicado ? 'Publicado' : 'No Publicado'}`

                                a(href=`/mascotas/editar/${mascota.id}` class="text-center px-2 py-2 md:py-1 text-xs leading-5 font-bold rounded cursor-pointer bg-indigo-100 text-indigo-800") Editar

                                form(method="POST" action=`/mascotas/eliminar/${mascota.id}`)
                                    input(type="hidden" name="_csrf" value=csrfToken)
                                    input(type="submit" class="w-full px-2 py-2 md:py-1 text-xs leading-5 font-bold rounded cursor-pointer bg-red-100 text-red-800" value=`Eliminar`)

                div(class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-600 sm:px-6")

                    div(class="flex-1 flex justify-between sm:hidden")
                        a(href=`/mis-mascotas?pagina=${paginaActual-1}` class=`${paginaActual === 1 ? 'pointer-events-none' : ''} relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50`) Anterior
                        a(href=href=`/mis-mascotas?pagina=${paginaActual+1}` class=`${paginaActual === paginas ? 'pointer-events-none' : ''} relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50`) Siguiente
                        
                    
                    div(class="hidden sm:flex-1 sm:flex sn:items-center sm:justify-between")
                        p(class="text-sm text-gray-700 gap-2") Mostrando 
                            span(class="font-medium") #{offset +1} a 
                            span(class="font-medium") #{total < limit + offset ? total : limit + offset} de 
                            span(class="font-medium") #{total} resultados
                    
                    div(class="hidden sm:block")
                        nav(class="relative z-0 inline-flex rounded-md shadow-md")
                            - var n = 1;
                                while n <= paginas
                                    a(href=`/mis-mascotas?pagina=${n}` class=`${paginaActual == n ? 'bg-indigo-50 border-indigo-500 text-indigo-600' : 'bg-white border-gray-300 text-gray-500 hover:bg-gray-50 '} relative inline-flex items-center px-4 py-2 border text-sm font-medium`) #{n++}

      else 
        p.text-center No hay Mascotas



block scripts
